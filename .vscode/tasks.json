{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-current",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}",
                "index_first_even.c",
                "index_last_odd.c",
                "sum_before_even_and_after_odd.c",
                "sum_between_even_odd.c",
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "sum_before_even_and_after_odd"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc сборка активного файла",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "index_first_even.c",
                "index_last_odd.c",
                "sum_before_even_and_after_odd.c",
                "sum_between_even_odd.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ]
}